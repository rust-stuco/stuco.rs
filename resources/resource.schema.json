{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ResourceFile",
  "type": "object",
  "properties": {
    "resources": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Resource"
      }
    }
  },
  "required": [
    "resources"
  ],
  "$defs": {
    "Resource": {
      "type": "object",
      "properties": {
        "author": {
          "type": [
            "string",
            "null"
          ]
        },
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "official": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "title": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "url"
      ]
    }
  }
}