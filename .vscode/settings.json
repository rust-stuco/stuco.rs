{
    "editor.formatOnSave": true,
    // Agrees with .editorconfig, but needed for some reason
    "files.insertFinalNewline": true,
    // Get the extension to recognize Tailwind in Dioxus' RSX
    "tailwindCSS.experimental.classRegex": [
        "class: \"(.*)\""
    ],
    "tailwindCSS.includeLanguages": {
        "rust": "html"
    },
    // Prevent editing of generated files
    "files.readonlyInclude": {
        "assets/tailwind.css": true,
        "**/*.schema.json": true,
        "Cargo.lock": true,
    },
    "files.watcherExclude": {
        "assets/tailwind.css": true,
        "**/*.schema.json": true,
        "Cargo.lock": true,
    }
}
